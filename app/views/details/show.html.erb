<%- model_class = Detail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @detail.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @detail.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @detail.desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_id) %>:</strong></dt>
  <dd><%= @detail.type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:outline_id) %>:</strong></dt>
  <dd><%= @detail.outline_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deleted) %>:</strong></dt>
  <dd><%= @detail.deleted %></dd>
  <dt><strong><%= model_class.human_attribute_name(:timestamps) %>:</strong></dt>
  <dd><%= @detail.timestamps %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_by) %>:</strong></dt>
  <dd><%= @detail.created_by %></dd>
  <dt><strong><%= model_class.human_attribute_name(:record_at) %>:</strong></dt>
  <dd><%= @detail.record_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sign) %>:</strong></dt>
  <dd><%= @detail.sign %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              details_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_detail_path(@detail), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              detail_path(@detail),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
