<%= simple_form_for @detail, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :user_id %>
  <%= f.input :amount %>
  <%= f.input :desc %>
  <%= f.input :type_id %>
  <%= f.input :outline_id %>
  <%= f.input :deleted %>
  <%= f.input :timestamps %>
  <%= f.input :created_by %>
  <%= f.input :record_at %>
  <%= f.input :sign %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                details_path, :class => 'btn' %>
  </div>
<% end %>
